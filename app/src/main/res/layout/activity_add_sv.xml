<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSvActivity"
    android:orientation="vertical"
    android:gravity="center"
    >
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten: "
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/eTen"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="nhap ten may vao"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam sinh: "
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/eYob"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="nhap nam sinh"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten: "
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/eQue"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="nhap que may vao"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten: "
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/eNamhoc"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="nhap nam hoc"/>
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/btnThemThat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Them that"/>
</LinearLayout>